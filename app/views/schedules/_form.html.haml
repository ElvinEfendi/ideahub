.row.well
  = simple_form_for @schedule||=Schedule.new, :url => idea_schedules_url(@idea.id), :html => { :class => 'span6 form-horizontal' }, :defaults => { :input_html => { :class => 'input-xlarge' } } do |f|
    %fieldset
      %legend Details
      = f.hidden_field :idea_id, :value => @idea.id
      = f.input :scheduled_at, as: :string, html: { class: "date input-append"}, input_html: {data: { "date" => "12/05/2012", "date-format" => "dd/mm/yyyy"} }
      = f.input :location
      .form-actions.ideahub
        = f.button :submit, :class => 'btn btn-primary btn-large'

:javascript
  $('#schedule_scheduled_at').datepicker();
